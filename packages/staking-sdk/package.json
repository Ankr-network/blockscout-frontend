{
  "name": "@ankr.com/staking-sdk",
  "version": "0.4.0",
  "files": [
    "build"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn clean && tsc --declaration --emitDeclarationOnly --outDir build && rollup -c && copyfiles -u 1 output/**/* build",
    "prepack": "node prepack.js",
    "clean": "rimraf build output",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --coverage",
    "format": "lint-staged",
    "types": "tsc --noEmit -p tsconfig.json",
    "lint:js": "cross-env NODE_ENV=production eslint src --ext=ts,tsx,js,jsx",
    "lint:js:fix": "yarn lint:js --fix",
    "docs": "typedoc ./src"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "cross-env NODE_ENV=production eslint --ext=ts --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ankr.com/provider": "^1.5.21",
    "axios": "^0.24.0",
    "bignumber.js": "^9.0.1",
    "lodash": "^4.17.21",
    "web3": "^1.6.1",
    "web3-core": "^1.7.0",
    "web3-eth": "^1.7.0",
    "web3-eth-contract": "^1.6.1",
    "web3-utils": "^1.3.5"
  },
  "devDependencies": {
    "@babel/cli": "7.17.3",
    "@babel/core": "7.17.5",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "7.17.3",
    "@babel/plugin-proposal-private-methods": "7.16.11",
    "@babel/plugin-proposal-private-property-in-object": "7.16.7",
    "@babel/plugin-transform-runtime": "7.17.0",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@types/jest": "^27.4.0",
    "@types/nock": "^11.1.0",
    "babel-plugin-inline-react-svg": "2.0.1",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "jest": "^28.1.1",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^10.5.4",
    "nock": "^13.2.7",
    "prettier": "^2.2.1",
    "rollup-plugin-svg": "2.0.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typedoc": "^0.22.17",
    "typescript": "^4.5.5"
  }
}
