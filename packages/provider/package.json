    "eslint-config-prettier": "^7.2.0",
    "install-peers-cli": "^2.2.0",
    "jest": "27.0.0",
    "lint-staged": "^10.5.4",
    "npm-watch": "^0.11.0",
    "prettier": "^2.2.1",
    "rimraf": "3.0.2",
    "rollup-plugin-svg": "2.0.0",
    "rollup-watch": "^4.3.1",
    "ts-jest": "27.0.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
