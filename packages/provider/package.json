    "bignumber.js": "^9.0.1",
    "ethereumjs-util": "^7.1.3",
    "react": "^17.0.2",
    "redux": "^4.1.2",
    "redux-saga": "^1.1.3",
    "reselect": "^4.1.6",
    "web3": "1.7.0",
    "web3-core": "1.7.0",
