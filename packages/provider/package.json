    "@binance-chain/bsc-connector": "^1.0.0",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@types/jest": "^26.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-gtm-module": "^2.0.1",
