{
  "name": "@ankr.com/provider",
  "version": "1.9.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint:js": "eslint \"./src/**/*.{js,ts,jsx,tsx}\"",
    "lint:js:fix": "yarn lint:js --fix",
    "format": "lint-staged",
    "test": "jest",
    "test:turbo": "cd ../.. && turbo run test --filter=@ankr.com/provider",
