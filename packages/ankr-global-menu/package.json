{
	"name": "@ankr.com/global-menu",
	"version": "1.4.3",
	"main": "./build/index.js",
	"types": "./src/index.ts",
	"files": [
		"build"
	],
	"license": "MIT",
	"private": false,
	"scripts": {
		"format": "lint-staged",
		"storybook": "start-storybook -p 6006 -s public",
		"build-storybook": "build-storybook -s public",
		"build": "rollup -c",
		"build:turbo": "cd ../.. && turbo run build --filter=@ankr.com/global-menu...",
		"prepublish": "node prepublish.js",
		"postpublish": "node prepublish.js revert",
		"prepack": "node prepublish.js",
		"postpack": "node prepublish.js revert",
		"types": "tsc --noEmit -p tsconfig.json",
		"clean": "rimraf build dist",
		"watch": "yarn build -w"
	},
	"peerDependencies": {
		"react": "17.x",
		"react-dom": "17.x"
	},
	"dependencies": {
		"@ankr.com/common": "*",
		"@material-ui/core": "^4.12.3",
		"@material-ui/styles": "^4.11.4",
		"@types/react-custom-scrollbars": "4.0.10",
		"classnames": "^2.3.1",
		"react-custom-scrollbars": "^4.2.1",
		"react-intl-universal": "^2.4.5",
		"react-router": "^5.2.1",
		"react-router-dom": "^5.2.0"
	},
	"devDependencies": {
		"@storybook/addon-actions": "^6.3.8",
		"@storybook/addon-essentials": "^6.3.8",
		"@storybook/addon-links": "^6.3.8",
		"@storybook/node-logger": "^6.3.8",
		"@storybook/preset-create-react-app": "^3.2.0",
		"@storybook/react": "^6.3.8",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"rimraf": "3.0.2"
	},
	"resolutions": {
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write"
		]
	}
}
