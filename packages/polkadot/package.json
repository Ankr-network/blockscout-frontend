{
  "name": "polkadot",
  "version": "1.5.13",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "_copy-assets": "copyfiles src/assets/**/* out",
    "_test-clean": "rimraf out ./index.js ./index.js.map ./src/**/*.js ./src/**/*.js.map",
    "build": "vite build",
    "build:turbo": "cd ../.. && turbo run build --filter=polkadot...",
    "clean": "rimraf build dist",
    "format": "lint-staged",
    "types": "tsc --noEmit -p tsconfig.json",
    "test": "npm run _test-clean && tsc && npm run _copy-assets && jest",
    "test:turbo": "cd ../.. && turbo run test --filter=polkadot"
  },
  "dependencies": {
    "@ankr.com/provider-core": "*",
    "@polkadot/api": "^9.5.1",
    "@polkadot/extension-dapp": "^0.44.6",
    "@polkadot/extension-inject": "^0.44.6",
    "@polkadot/types": "^9.5.1",
    "@polkadot/util": "^9.5.1",
    "@polkadot/util-crypto": "^9.5.1",
    "@polkadot/wasm-crypto": "^6.3.1",
    "axios": "^0.21.1",
    "axios-cache-adapter": "^2.7.3",
    "bignumber.js": "^9.0.1",
    "bs58": "^4.0.0",
    "common": "*",
    "web3-eth-contract": "1.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@types/bs58": "^4.0.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.18.3",
    "@vitejs/plugin-react": "^2.1.0",
    "babel-jest": "^27.4.5",
    "copyfiles": "^2.4.1",
    "jest": "27.0.0",
    "jsonfile": "^6.1.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "3.0.2",
    "typescript": "^4.5.4",
    "vite": "^3.1.6",
    "vite-plugin-svgr": "^2.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>"
    ],
    "moduleDirectories": [
      "<rootDir>/node_modules",
      "<rootDir>/../../node_modules"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "testMatch": [
      "**/?(*.)+(test).+(js)"
    ],
    "transformIgnorePatterns": []
  }
}
