{
  "compilerOptions": {
	"lib": [
	  "ES2015",
	  "ES2016",
	  "ES2017",
	  "ES2018",
	  "ES2019",
	  "ES2020",
	  "ESNext"
	],
	"types": [
	  "jest",
	  "node"
	],
	"moduleResolution": "Node",
	"target": "ES2015",
	"declaration": true,
	"declarationMap": true,
	"esModuleInterop": true,
	"resolveJsonModule": true,
	"outDir": "out"
  },
  "include": [
	"src/**/*",
	"index.ts"
  ],
  "exclude": [
	"node_modules",
	"out"
  ]
}
