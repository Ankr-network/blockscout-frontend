{
  "extends": "../../.common-eslintrc",
  "ignorePatterns": ["public/*.js"],
  "overrides": [
    {
      "files": ["**/*.ts?(x)"],
      "rules": {
        "import/order": [
          "warn",
          {
            "groups": [
              ["builtin", "external"],
              "internal",
              ["parent", "sibling", "index"]
            ],
            "pathGroups": [
              {
                "pattern": "modules/**",
                "group": "internal"
              },
              {
                "pattern": "domains/**",
                "group": "internal"
              },
              {
                "pattern": "hooks/**",
                "group": "internal"
              },
              {
                "pattern": "uiKit/**",
                "group": "internal"
              },
              {
                "pattern": "assets/**",
                "group": "internal"
              },
              {
                "pattern": "store",
                "group": "internal"
              },
              {
                "pattern": "store/**",
                "group": "internal"
              }
            ],
            "pathGroupsExcludedImportTypes": ["builtin"],
            "newlines-between": "always"
          }
        ]
      }
    }
  ]
}
